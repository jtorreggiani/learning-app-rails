<div id="<%= dom_id post %>" class="bg-white p-4 rounded-lg shadow mb-4">
  <h3 class="text-lg font-semibold mb-2"><%= post.title %></h3>
  <p class="text-gray-700 mb-4"><%= post.content %></p>

  <!-- Turbo Frame for Reactions -->
  <turbo-frame id="<%= dom_id(post, :reactions) %>">
    <%= render 'reactions/reactions', post: post %>
  </turbo-frame>

  <% if @current_user == post.user %>
    <div class="flex items-center space-x-2">
      <%= link_to "Show", post, class: "text-blue-600 hover:text-blue-800 transition duration-300", data: { turbo: false } %>
      <%= link_to "Edit", edit_post_path(post), class: "text-blue-600 hover:text-blue-800 transition duration-300", data: { turbo: false } %>
    </div>
  <% end %>
</div>
