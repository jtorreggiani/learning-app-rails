<div class="mx-auto md:w-2/3 w-full p-10">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg" id="notice"><%= notice %></p>
  <% end %>

  <%= link_to "Back to posts", posts_path, class: "mb-5 rounded-lg py-2 px-4 bg-gray-100 inline-block font-medium" %>

  <div class="bg-white p-6 rounded-lg shadow">
    <h3 class="text-lg font-semibold mb-2"><%= @post.title %></h3>
    <p class="text-gray-700 mb-4"><%= @post.content %></p>
  </div>

  <div class="mt-4 flex justify-between">
    <%= link_to "Edit this post", edit_post_path(@post), class: "rounded-lg py-2 px-4 bg-blue-100 text-blue-800 inline-block font-medium" %>
    <%= button_to "Destroy this post", post_path(@post), method: :delete, data: { confirm: "Are you sure?" }, class: "rounded-lg py-2 px-4 bg-red-100 text-red-800 inline-block font-medium" %>
  </div>
</div>