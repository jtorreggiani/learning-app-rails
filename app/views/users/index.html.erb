<main class="bg-gray-100 p-4">
  <div class="space-y-4">
    <% @users.each do |user| %>
      <div class="bg-white rounded-lg overflow-hidden shadow-lg p-4">
        <!-- User Image -->
        <div class="flex justify-center">
          <%= image_tag(user.profile_picture, alt: "#{user.username} profile picture", class: "h-24 w-24 rounded-full object-cover") if user.profile_picture.present? %>
        </div>

        <!-- User Info -->
        <div class="text-center mt-4">
          <h2 class="text-xl font-semibold">
            <%= link_to user.username, profile_path(user) %>
          </h2>
          <p class="text-gray-600"><%= user.headline %></p>
        </div>

        <!-- Connection Actions -->
        <div class="flex justify-center mt-4">
          <%# link_to 'Message', message_path(user), class: 'text-white bg-blue-500 hover:bg-blue-700 font-medium py-2 px-4 rounded w-full text-center' %>
        </div>
      </div>
    <% end %>
  </div>
</main>
