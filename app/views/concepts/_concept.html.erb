<div id="<%= dom_id concept %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Name:</strong>
    <%= concept.name %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Description:</strong>
    <%= concept.description %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this concept", concept, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to "Edit this concept", edit_concept_path(concept), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
